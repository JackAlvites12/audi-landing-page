<section id="loader" class="fixed inset-0 z-[999] bg-black h-screen flex justify-center items-center">
    <img src="logo-audi.svg" class="text-white" width="160" alt="Logo Audi">
</section>

<style>

	#loader{
		transition: opacity 0.5s ease;
	}

	#loader img{
		animation: fadeIn 1s ease
	}

	#loader.fade-out{
		opacity: 0;
		pointer-events: none;
	}

	@keyframes fadeIn {
		from{
			opacity: 0;
			transform: scale(0.9);
		}
		to{
			opacity: 1;
			transform: scale(1);
		}
	}
</style>

<script>
	window.addEventListener('load', () => {

		setTimeout(() => {
			
			const loader = document.getElementById('loader')

			if( !loader ) return 

			loader.classList.add('fade-out')

		}, 1500)
	})
</script>